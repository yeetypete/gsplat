{
    "build": {
      "context": "..",
      "dockerfile": "../Dockerfile"
    },
    "containerEnv": {
      "SHELL": "/bin/bash"
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "charliermarsh.ruff",
          "ms-azuretools.vscode-docker",
          "ms-python.python",
          "ms-python.vscode-pylance",
          "redhat.vscode-yaml"
        ]
      }
    },
    "hostRequirements": {
      "gpu": true
    },
    "name": "gsplat",
    "remoteUser": "vscode",
    "runArgs": [
      "--ipc=host",
      "--gpus=all"
    ]
  }
