{
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile"
  },
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  },
  "hostRequirements": {
    "gpu": true
  },
  "mounts": [
    {
      "source": "segsplat-cache",
      "target": "/home/vscode/.cache",
      "type": "volume"
    }
  ],
  "name": "gsplat",
  "remoteUser": "vscode",
  "runArgs": [
    "--ipc=host",
    "--gpus=all"
  ]
}
